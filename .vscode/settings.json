{
    // Java Configuration
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.detectJdksAtStart": true,
    "java.configuration.runtimes": [],
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    "java.saveActions.organizeImports": true,
    "java.format.enabled": true,
    "java.format.settings.url": "",
    "java.format.settings.profile": "",

    // Spring Boot Configuration
    "spring-boot.ls.problem.application-properties.unknown-property": "WARNING",
    "spring.initializr.defaultLanguage": "Java",
    "spring.initializr.defaultJavaVersion": "21",
    "spring.initializr.defaultPackaging": "Jar",

    // Editor Configuration
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // File Associations
    "files.associations": {
        "*.properties": "spring-boot-properties",
        "*.yml": "spring-boot-properties-yaml",
        "*.yaml": "spring-boot-properties-yaml"
    },

    // Maven Configuration
    "maven.executable.path": "",
    "maven.terminal.useJavaHome": true,
    "maven.terminal.customEnv": [],

    // Lombok Configuration
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -Xlog:disable -javaagent:lombok.jar",

    // MongoDB Configuration
    "mongodb.connectionSaving.hideOptionToChooseWhereToSaveNewConnections": false,

    // Git Configuration
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    // Terminal Configuration
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // Exclude files from explorer
    "files.exclude": {
        "**/target": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    }
}